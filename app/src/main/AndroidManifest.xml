<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.borombo.sandboxapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SandboxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".common.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".firebase.AuthMainActivity" />
        <activity
            android:name=".firebase.MailAuthActivity"
            android:label="@string/title_activity_mail_auth" />
        <activity android:name=".firebase.HomeProfileActivity" />
        <activity android:name=".calligraphy.CalligraphyMainActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="1ffbb4d8f56b452c2f6a45c95bd92187e4308015" />

        <activity android:name=".firebase.FirebaseMainActivity" />
        <activity android:name=".retrofit.RetrofitMainActivity" />
        <activity android:name=".retrofit.RetrofitGetActionResult"></activity>
    </application>

</manifest>